{
  "manifest_version": 2,
  "name": "줄임말 변환기",
  "description": "줄임말과 대치할 단어를 입력해두면, 글을 쓸 때 자동으로 변환해줍니다!",
  "version": "1.0.0",
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_title": "줄임말 변환기",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/abbrtooriginal.js"],
      "all_frames": true
    } 
  ],
  "permissions": [
      "storage",
      "activeTab",
      "tabs",
      "<all_urls>"
  ]
}
